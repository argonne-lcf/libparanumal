dfloat minmodLim( dfloat a, dfloat b, dfloat c ) {
  int s = 0;
  dfloat m = 0.0;
  if((a>0.0)&&(b>0.0)&&(c>0.0)) {
    s = 1;
  }
  else if((a<0.0)&&(b<0.0)&&(c<0.0)) {
    s = -1;
  }

  if(s!=0) m = s*std::min({std::abs(a),std::abs(b),std::abs(c)});

  return m;
}

@kernel void advectionFluxLimitersQuad2D (const dlong Nelements,
                                @restrict const dlong  * EToE,
                                @restrict const dfloat * q,
                                @restrict dfloat * qfl,
                                @restrict const dfloat * gll_w){

  for(dlong e=0;e<Nelements;++e;@tile(16,@outer,@inner)){
    // Initialization
    qfl[e] = 0.0;

    // Volume-averaging
    dfloat q_w = 0.0;

    for(int j=0;j<p_Nq;++j){
      for(int i=0;i<p_Nq;++i){

        const dlong id = e*p_Np + j*p_Nq + i;

        // This part can be done once and stored in a shared memory!
	q_w += gll_w[i]*gll_w[j]*q[id]; 
      }
    }

    qfl[e] = q_w / 4.0;

    @barrier("local");

    // Computing slopes based on neighbor elements and applying limiters
    em = EToE[e*4+3]; ep = EToE[e*4+1];
    // dfloat r = (qfl[e]-qfl[em])/(qfl[ep]-qfl[e]+0.000001);

    // Find elements in need of limiting
    dfloat u1 = q[e*p_Np + 0*p_Nq + 0];     // Left interface value 
    dfloat u2 = q[e*p_Np + 0*p_Nq + Nq-1];  // Right interface value

    dfloat u1_lim = qfl[e] - minmodLim(qfl[e]-u1,qfl[e]-qfl[em],qfl[ep]-qfl[e]);
    dfloat u2_lim = qfl[e] + minmodLim(u2+qfl[e],qfl[e]-qfl[em],qfl[ep]-qfl[e]);

    if((std::abs(u1_lim-u1)>eps0) || (std::abs(u2_lim-u2)>eps0)) {
       for(int j=0;j<p_Nq;++j){
         for(int i=0;i<p_Nq;++i) {
           const dlong id = e*p_Np + j*p_Nq + i;

           // Piecewise-constant approximation
           q[id] = qfl[e];

           // Piecewise-linear reconstruction
         }
       }
    }
 
  } // end of for loop over elements

}
